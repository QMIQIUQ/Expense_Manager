rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             ((get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true) ||
              (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminStatus == true));
    }
    
    // Users collection - for admin management
    match /users/{userId} {
      // Users can read their own document; admins can read any
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      // Allow users to create their own metadata on first login
      allow create: if isAuthenticated() && (isOwner(userId) || isAdmin());
      // Allow users to update their own metadata; admins can update any
      allow update: if isAuthenticated() && (isOwner(userId) || isAdmin());
      // Only admins can delete user documents
      allow delete: if isAdmin();
    }
    
    // Categories collection
    match /categories/{categoryId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // Expenses collection
    match /expenses/{expenseId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // Budgets collection
    match /budgets/{budgetId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // Recurring expenses collection
    match /recurringExpenses/{recurringId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // Cards collection (credit cards)
    match /cards/{cardId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // Incomes collection
    match /incomes/{incomeId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && 
                      isOwner(request.resource.data.userId) &&
                      request.resource.data.amount is number &&
                      request.resource.data.amount > 0;
      allow update: if isAuthenticated() && 
                       (isOwner(resource.data.userId) || isAdmin()) &&
                       request.resource.data.amount is number &&
                       request.resource.data.amount > 0;
      allow delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // E-Wallets collection (electronic payment methods)
    match /ewallets/{ewalletId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // Banks collection (bank account management)
    match /banks/{bankId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // Feature Settings collection (tab visibility and ordering)
    match /featureSettings/{settingsId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // Repayments collection (tracks repayments against expenses)
    match /repayments/{repaymentId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && 
                      isOwner(request.resource.data.userId) &&
                      request.resource.data.amount is number &&
                      request.resource.data.amount > 0 &&
                      request.resource.data.expenseId is string;
      allow update: if isAuthenticated() && 
                       (isOwner(resource.data.userId) || isAdmin()) &&
                       request.resource.data.amount is number &&
                       request.resource.data.amount > 0;
      allow delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // User Settings collection (billing cycle day and other preferences)
    match /userSettings/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow create: if isAuthenticated() && 
                      isOwner(userId) &&
                      request.resource.data.billingCycleDay is number &&
                      request.resource.data.billingCycleDay >= 1 &&
                      request.resource.data.billingCycleDay <= 31;
      allow update: if isAuthenticated() && 
                       (isOwner(userId) || isAdmin()) &&
                       request.resource.data.billingCycleDay is number &&
                       request.resource.data.billingCycleDay >= 1 &&
                       request.resource.data.billingCycleDay <= 31;
      allow delete: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }
    
    // Transfers collection (tracks money transfers between payment methods)
    match /transfers/{transferId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && 
                      isOwner(request.resource.data.userId) &&
                      request.resource.data.amount is number &&
                      request.resource.data.amount > 0 &&
                      request.resource.data.fromPaymentMethod is string &&
                      request.resource.data.toPaymentMethod is string &&
                      // Prevent transfers to the same account
                      !(request.resource.data.fromPaymentMethod == request.resource.data.toPaymentMethod &&
                        request.resource.data.fromPaymentMethod == 'cash') &&
                      !(request.resource.data.fromPaymentMethod == 'credit_card' &&
                        request.resource.data.toPaymentMethod == 'credit_card' &&
                        request.resource.data.fromCardId == request.resource.data.toCardId) &&
                      !(request.resource.data.fromPaymentMethod == 'e_wallet' &&
                        request.resource.data.toPaymentMethod == 'e_wallet' &&
                        request.resource.data.fromPaymentMethodName == request.resource.data.toPaymentMethodName) &&
                      !(request.resource.data.fromPaymentMethod == 'bank' &&
                        request.resource.data.toPaymentMethod == 'bank' &&
                        request.resource.data.fromBankId == request.resource.data.toBankId);
      allow update: if isAuthenticated() && 
                       (isOwner(resource.data.userId) || isAdmin()) &&
                       request.resource.data.amount is number &&
                       request.resource.data.amount > 0;
      allow delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // Dashboard Layouts collection (stores user's dashboard widget preferences)
    match /dashboardLayouts/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow delete: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }
    
    // Quick Expense Presets collection (stores user's quick expense shortcuts)
    match /quickExpensePresets/{presetId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && 
                      isOwner(request.resource.data.userId) &&
                      request.resource.data.name is string &&
                      request.resource.data.amount is number &&
                      request.resource.data.amount > 0 &&
                      request.resource.data.categoryId is string;
      allow update: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // Scheduled Payments collection (subscriptions, installments, debts)
    match /scheduledPayments/{paymentId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && 
                      isOwner(request.resource.data.userId) &&
                      request.resource.data.name is string &&
                      request.resource.data.amount is number &&
                      request.resource.data.amount > 0 &&
                      request.resource.data.type is string &&
                      request.resource.data.frequency is string &&
                      request.resource.data.dueDay is number &&
                      request.resource.data.dueDay >= 1 &&
                      request.resource.data.dueDay <= 31;
      allow update: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // Scheduled Payment Records collection (tracks individual payment confirmations)
    match /scheduledPaymentRecords/{recordId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && 
                      isOwner(request.resource.data.userId) &&
                      request.resource.data.scheduledPaymentId is string &&
                      request.resource.data.expectedAmount is number &&
                      request.resource.data.actualAmount is number &&
                      request.resource.data.actualAmount > 0 &&
                      request.resource.data.paidDate is string;
      allow update: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
  }
}
